{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.rulers": [100],
  "eslint.enable": true,
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "jest.shell": "/bin/zsh",
  "jest.virtualFolders": [
    {
      "name": "backend",
      "rootPath": "packages/backend",
      "jestCommandLine": "corepack pnpm test:debug",
      "runMode": "on-demand"
    },
    {
      "name": "cron",
      "rootPath": "packages/cron",
      "jestCommandLine": "corepack pnpm test",
      "runMode": "on-demand"
    },
    {
      "name": "external-api",
      "rootPath": "packages/external-api",
      "jestCommandLine": "corepack pnpm test",
      "runMode": "on-demand"
    },
    {
      "name": "shared-bridge",
      "rootPath": "packages/shared-bridge",
      "jestCommandLine": "corepack pnpm test",
      "runMode": "watch"
    }
  ],
  "sonarlint.connectedMode.project": {
    "connectionId": "socialgouv",
    "projectKey": "SocialGouv_vao"
  }
}
