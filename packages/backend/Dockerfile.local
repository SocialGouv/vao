FROM local-node:latest as builder

USER root

WORKDIR /usr/cache
COPY package.json yarn.lock ./
COPY packages/shared packages/shared/
COPY packages/backend/package.json packages/backend/yarn.lock packages/backend/


RUN chown -R node /usr/cache

USER node

RUN yarn workspace @vao/backend install

WORKDIR /app

CMD ["yarn", "workspace", "@vao/frontend-backend", "dev"]
