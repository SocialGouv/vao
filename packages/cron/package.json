{
  "name": "@vao/cron",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "author": "orgs/SocialGouv/teams/vao",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix ./src",
    "dev": "tsx watch ./src",
    "build:dev": "pkgroll --minify --sourcemap",
    "build": "pkgroll --minify --sourcemap && npm run sentry:sourcemaps",
    "start": "node ./dist/index.js",
    "test": "vitest",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org incubateur --project psn-vao-cron ./dist && sentry-cli --url $SENTRY_URL sourcemaps upload --org $SENTRY_ORG --project $SENTRY_PROJECT ./dist"
  },
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemailer-smtp-transport": "^2.7.8",
    "cron": "^4.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "pkgroll": "^2.11.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@sentry/cli": "^2.42.3",
    "@sentry/node": "^9.5.0",
    "@vao/shared": "^1.0.0",
    "nodemailer": "^6.10.0",
    "pg": "^8.14.0",
    "pino": "^9.6.0"
  }
}
